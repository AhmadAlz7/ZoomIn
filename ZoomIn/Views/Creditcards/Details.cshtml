@model ZoomIn.Models.Creditcard

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1>Details</h1>

<script type="text/javascript">
    window.onload = function () {
        var element = document.getElementById("_ccards");
        element.classList.add("active");
    }
</script>

<div>
    <h4>Creditcard</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cardnumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cardnumber)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cardkey)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cardkey)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Expirydate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Expirydate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Balance)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Balance)
        </dd>
    </dl>
</div>
<div class="form-group row">
    <div class="col-8 offset-7 row">
        <div class="col-4">
            <a asp-action="Edit" asp-route-id="@Model.CardId" class="btn btn-primary w-100"><i class="fas fa-edit"></i> &nbsp; Edit</a>
        </div>
        <div class="col-4">
            <a asp-action="Index" class="btn btn-dark w-100">
                <i class="fas fa-sign-out-alt"></i> &nbsp; Back
            </a>
        </div>
    </div>
</div>
