@model ZoomIn.Models.Userrole

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1>Delete</h1>

<script type="text/javascript">
    window.onload = function () {
        var element = document.getElementById("_userroles");
        element.classList.add("active");
    }
</script>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Userrole</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Roleindex)
        </dt>
        <dd class="col-sm-10">
            @Model.Roleindex.Value.ToString("0")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rolename)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rolename)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Roledescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Roledescription)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RoleId" />
        <div class="form-group row">
            <div class="col-8 offset-7 row">
                <div class="col-4">
                    <input type="submit" value="Delete" class="btn btn-danger w-100" />
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-dark w-100"><i class="fas fa-sign-out-alt"></i> &nbsp; Back </a>
                </div>
            </div>
        </div>
    </form>
</div>
