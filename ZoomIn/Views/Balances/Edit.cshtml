@model ZoomIn.Models.Balance

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1>Edit</h1>

<script type="text/javascript">
    window.onload = function () {
        var element = document.getElementById("_finance");
        element.classList.add("active");
    }
</script>

<h4>Finance</h4>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BalanceLock" />
            <div class="form-group">
                <label asp-for="Profitrate" class="control-label"></label>
                <input asp-for="Profitrate" class="form-control" />
                <span asp-validation-for="Profitrate" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="BalanceValue" control-label"></label>
                <input asp-for="BalanceValue" class="form-control"/>
                <span asp-validation-for="BalanceValue" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-7 row">
                    <div class="col-4">
                        <input type="submit" value="Save" class="btn btn-success w-100" />
                    </div>
                    <div class="col-4">
                        <a asp-action="Index" class="btn btn-dark w-100">
                            <i class="fas fa-sign-out-alt"></i> &nbsp; Back
                        </a>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>

