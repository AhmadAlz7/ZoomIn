@model IEnumerable<ZoomIn.Models.Userrole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1>User Roles</h1>

<script type="text/javascript">
    window.onload = function () {
        var element = document.getElementById("_userroles");
        element.classList.add("active");
    }
</script>

<div class="row pt-4">
    <div class="col-6 offset-6 text-right">
        <a asp-action="Create" class="btn btn-info">
            <i class="fas fa-plus"></i> &nbsp; Create New Role
        </a>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <div class="card card-stats">
            <div class="card-header card-header-info card-header-icon">
                <div class="card-icon">
                    <i class="fas fa-user-tag"></i>
                </div>
                <h3 class="card-title">user Roles</h3>
            </div>
            <br />

            <table class="table ml-2">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Index
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Description
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.RoleId.ToString("0")
                            </td>
                            <td>
                                @item.Roleindex.Value.ToString("0")
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Rolename)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Roledescription)
                            </td>
                            <td class="text-center" width="20%">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.RoleId" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.RoleId" class="btn btn-info"><i class="fas fa-info-circle"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.RoleId" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>