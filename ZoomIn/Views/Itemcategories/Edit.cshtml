@model ZoomIn.Models.Itemcategory

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Category</h4>
<hr />

<script type="text/javascript">
    window.onload = function () {
        var element = document.getElementById("_categories");
        element.classList.add("active");
    }
</script>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CateId" />
            <div class="form-group">
                <label asp-for="Catename" class="control-label">Name</label>
                <input asp-for="Catename" class="form-control" />
                <span asp-validation-for="Catename" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Createdate" class="control-label"></label>
                <input asp-for="Createdate" class="form-control" />
                <span asp-validation-for="Createdate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="offset-6 col-6">
                    <div class="col-12 row">
                        <div class="col">
                            <input type="submit" value="Save" class="btn btn-success w-100" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-dark w-100">
                                <i class="fas fa-sign-out-alt"></i> &nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
