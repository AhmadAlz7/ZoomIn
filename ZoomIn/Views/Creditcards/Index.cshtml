@model IEnumerable<ZoomIn.Models.Creditcard>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1>Credit Cards</h1>

<script type="text/javascript">
    window.onload = function () {
        var element = document.getElementById("_ccards");
        element.classList.add("active");
    }
</script>

<div class="row pt-4">
    <div class="col-6 offset-6 text-right">
        <a asp-action="Create" class="btn btn-rose">
            <i class="fas fa-plus"></i> &nbsp; Create New Card
        </a>
    </div>
</div>

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12">
        <div class="card card-stats">
            <div class="card-header card-header-rose card-header-icon">
                <div class="card-icon">
                    <i class="far fa-credit-card"></i>
                </div>
                <h3 class="card-title">Credit Cards</h3>
            </div>
            <br />

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Cardnumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cardkey)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Expirydate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Balance)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cardnumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cardkey)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Expirydate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Balance)
                            </td>
                            <td class="text-center" width="20%">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.CardId" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.CardId" class="btn btn-info"><i class="fas fa-info-circle"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.CardId" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
